{
	"name": "@gramio/format",
	"version": "0.1.4",
	"description": "Library for formatting text for Telegram Bot API",
	"homepage": "https://gramio.dev/formatting.html",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gramiojs/format"
	},
	"keywords": [
		"gramio",
		"telegram",
		"bot",
		"formatting",
		"markdown",
		"html",
		"markdownV2"
	],
	"main": "./dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"prepublishOnly": "bunx pkgroll",
		"generate": "bun scripts/generate.ts",
		"lint": "bunx @biomejs/biome check ./src",
		"lint:fix": "bun lint --apply",
		"jsr": "bun scripts/release-jsr.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@types/bun": "latest",
		"pkgroll": "2.1.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@gramio/types": "^7.4.0"
	},
	"license": "MIT",
	"files": ["dist"]
}
