{
	"name": "@gramio/format",
	"version": "0.3.1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gramiojs/format.git"
	},
	"main": "./dist/index.js",
	"dependencies": {
		"@gramio/types": "^9.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest",
		"expect-type": "^1.2.1",
		"marked": "^15.0.11",
		"pkgroll": "^2.12.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./markdown": {
			"import": {
				"types": "./dist/markdown/index.d.ts",
				"default": "./dist/markdown/index.js"
			},
			"require": {
				"types": "./dist/markdown/index.d.cts",
				"default": "./dist/markdown/index.cjs"
			}
		}
	},
	"description": "Library for formatting text for Telegram Bot API",
	"files": ["dist"],
	"homepage": "https://gramio.dev/formatting.html",
	"keywords": [
		"gramio",
		"telegram",
		"bot",
		"formatting",
		"markdown",
		"html",
		"markdownV2"
	],
	"license": "MIT",
	"peerDependenciesMeta": {
		"marked": {
			"optional": true
		}
	},
	"peerDependencies": {
		"marked": "^15.0.11"
	},
	"scripts": {
		"prepublishOnly": "bunx pkgroll",
		"generate": "bun scripts/generate.ts",
		"lint": "bunx @biomejs/biome check ./src",
		"lint:fix": "bun lint --apply"
	},
	"type": "module"
}
